<Window x:Name="MainWindow1" x:Class="FirstWPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FirstWPFApp"
        mc:Ignorable="d"
        Title="Головне вікно" Height="260" Width="535" Background="#808080" Visibility="Visible" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="0,0,0,-6">
        <Label Content="Головна форма" Margin="10,10,315,0" VerticalAlignment="Top" Height="36" Width="187" HorizontalAlignment="Center" FontFamily="Comic Sans MS" FontSize="20" Foreground="#FF060606"/>
        <Button x:Name="ToWin1" Content="До вікна 1" HorizontalAlignment="Left" Margin="10,68,0,0" VerticalAlignment="Top" Width="102" Height="31" Click="ToWin1_Click" Background="#FF8AB385"/>
        <Button x:Name="ToWin2" Content="До вікна 2" HorizontalAlignment="Left" Margin="10,104,0,0" VerticalAlignment="Top" Width="102" Height="31" Background="#FF8AB385" Click="ToWin2_Click"/>
        <Button x:Name="ToWin3" Content="До вікна 3" HorizontalAlignment="Left" Margin="10,140,0,0" VerticalAlignment="Top" Width="102" Height="31" Foreground="Black" Click="ToWin3_Click" Background="#FF8AB385"/>
        <Button x:Name="ToWin4" Content="До вікна 4" HorizontalAlignment="Left" Margin="10,176,0,0" VerticalAlignment="Top" Width="102" Height="31" Click="ToWin4_Click" Background="#FF8AB385"/>
        <Button x:Name="ExitBtn" Content="Вихід" HorizontalAlignment="Left" Margin="408,176,0,0" VerticalAlignment="Top" Width="102" Height="31" Background="#FF2C9ED3" Cursor="Cross" Click="ExitBtn_Click"/>
    </Grid>
</Window>
